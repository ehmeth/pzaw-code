<form action="/add_card/<%=cardset.slug%>" method="POST">
  <div>
    <label for="card_front">Awers</label>
    <input
      type="text"
      name="front"
      id="card_front"
      required
      minlength="1"
      maxlength="500"
      <% if (locals.front){ %>
      value="<%= front %>"
      <% }%>
    />
  </div>
  <div>
    <label for="card_back">Rewers</label>
    <input
      type="text"
      name="back"
      id="card_front"
      required
      minlength="1"
      maxlength="500"
      <% if (locals.back){ %>
      value="<%= back %>"
      <% }%>
    />
  </div>
  <input type="hidden" name="csrf_token" id="form_csrf_token" value="<%-session.csrf_token%>">
  <div>
    <button>Dodaj</button>
  </div>
</form>
